<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_header_view"
    style="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nc_header_bg"
    android:minHeight="@dimen/nc_header_height" >

    <TextView
        android:id="@+id/device_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/dl_header_text"
        android:textColor="@color/white"
        android:textSize="@dimen/nc_header_text_size" />

    <ImageButton
        android:id="@+id/dl_add_btn"
        android:layout_width="@dimen/nc_header_height"
        android:layout_height="@dimen/nc_header_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/dl_add_btn_desc"
        android:scaleType="centerInside"
        android:src="@drawable/dl_add_btn_sel" />

</RelativeLayout>